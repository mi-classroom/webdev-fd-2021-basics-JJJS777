{
    "plugin": [
        "stylelint-order",
        "stylelint-scss"
    ],
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-idiomatic-order"
    ],
    "rules": {
        "indentation": 2,
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true,
        "order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-order": [
			"width",
			"height"
		]
    }
  }